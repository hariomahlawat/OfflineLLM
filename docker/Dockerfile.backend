########################  builder  ########################
FROM python:3.11-slim AS builder
WORKDIR /build

# copy your requirements so pip can see them
COPY requirements.lock .

RUN apt-get update \
 && apt-get install -y --no-install-recommends build-essential \
 && pip install --upgrade pip \
 # retry downloads in case of network hiccups
 && pip download \
      --dest wheelhouse \
      --retries 10 \
      --timeout 120 \
      -r requirements.lock \
 && apt-get purge -y build-essential \
 && apt-get autoremove -y \
 && rm -rf /var/lib/apt/lists/*

########################  runtime  ########################
FROM python:3.11-slim
WORKDIR /app

# bring in your wheels from builder
COPY requirements.lock .  
COPY --from=builder /build/wheelhouse /wheelhouse

RUN pip install --no-index --find-links=/wheelhouse -r requirements.lock

# Entrypoint + utilities
COPY docker/entrypoint.sh /app/entrypoint.sh

RUN set -eux; \
    apt-get update; \
    apt-get install -y --no-install-recommends \
      curl \
      gosu \
      dos2unix; \
    dos2unix /app/entrypoint.sh; \
    chmod +x /app/entrypoint.sh; \
    useradd -m llm; \
    chown -R llm:llm /app; \
    rm -rf /var/lib/apt/lists/*

ENV CHROMA_DIR=/data/chroma \
    OLLAMA_BASE_URL=http://ollama:11434 \
    PYTHONUNBUFFERED=1

COPY app/ /app/app

ENTRYPOINT ["bash", "/app/entrypoint.sh"]
EXPOSE 8000
