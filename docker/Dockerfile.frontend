FROM node:20 AS build
WORKDIR /ui

COPY offline-llm-ui/package.json offline-llm-ui/package-lock.json ./
RUN npm install

COPY offline-llm-ui/ ./

# ensure esbuild binary matches the JS package version
RUN npm install esbuild@0.25.6 --no-save
RUN npm rebuild esbuild --platform=linux --arch=x64

RUN npm run build

FROM nginx:alpine
COPY docker/nginx.conf /etc/nginx/nginx.conf
COPY --from=build /ui/dist /usr/share/nginx/html
COPY certs /etc/nginx/certs
EXPOSE 443
CMD ["nginx", "-g", "daemon off;"]
